  "description": "A P2P system that leverages collaboration, local-first principles, and more on W3C Web Annotations",
  "private": true,
  "main": "browser.js",
  "bin": {
    "hyperwell-gateway": "./bin/server.js"
  },
  "scripts": {
    "build": "node build.js -d | exorcist dist/hyperwell.js.map > dist/hyperwell.js",
    "build-min": "node build.js | terser -m -c > dist/hyperwell.min.js",
    "start": "node ./bin/server.js",
    "test": "echo 'no tests specified'; exit 1"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "@hapi/hapi": "^18.4.0",
    "browserify-package-json": "^1.0.1",
    "debug": "^4.1.1",
    "hypermerge": "github:automerge/hypermerge#9c720eab",
    "hyperswarm": "^2.3.1",
    "node-cache": "^5.0.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "core-js": "^3.4.1",
    "dotenv": "^8.2.0",
    "exorcist": "^1.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
